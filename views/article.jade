extends layout
block content
    #wrapper
        // Sidebar
        #sidebar-wrapper
            ul.sidebar-nav
                li.sidebar-brand
                    a(href='#')
                        | Start Here
                div !{articleNav}
                
        // /#sidebar-wrapper
        // Page Content
        #page-content-wrapper
            .container-fluid
                .row
                    .col-lg-12
                        h1 #{title}
                        if error
                            div.panel.panel-danger
                                div.panel-heading Error: #{title} does not exist yet.

                        #article !{ body }

                        #edit
                            if !error
                                button#editArticle.btn.btn-default(data-title='#{urlTitle}') Edit Article
                                #footer Last Updated: !{ timestamp }
                            else
                                button#editArticle.btn.btn-default(data-title='#{urlTitle}') Create Article
                                #footer This article does not exist yet.
        // /#page-content-wrapper
    // /#wrapper
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')
    // Menu Toggle Script
    script.
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
